<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@color/app_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/size20"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/size15"
            android:layout_marginLeft="@dimen/size10"
            />
        <TextView
            android:id="@+id/txt_title_top"
            android:textSize="@dimen/size13"
            android:textColor="@color/white"
            android:text="@string/please_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/size10"
            android:layout_marginBottom="@dimen/size5"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/star1"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_border_24"
                    app:tint="@color/white"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"/>
                <ImageView
                    android:id="@+id/star2"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_border_24"
                    app:tint="@color/white"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5" />
                <ImageView
                    android:id="@+id/star3"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_border_24"
                    app:tint="@color/white"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"/>
                <ImageView
                    android:id="@+id/star4"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_border_24"
                    app:tint="@color/white"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5" />
                <ImageView
                    android:id="@+id/star5"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_border_24"
                    app:tint="@color/white"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >

                <ImageView
                    android:id="@+id/starSelect1"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_select"
                    app:tint="#FFC107"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"/>
                <ImageView
                    android:id="@+id/starSelect2"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_select"
                    app:tint="#FFC107"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"/>
                <ImageView
                    android:id="@+id/starSelect3"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_select"
                    app:tint="#FFC107"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"/>
                <ImageView
                    android:id="@+id/starSelect4"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_select"
                    app:tint="#FFC107"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5" />
                <ImageView
                    android:id="@+id/starSelect5"
                    android:layout_width="@dimen/size40"
                    android:layout_height="@dimen/size40"
                    android:src="@drawable/ic_star_select"
                    app:tint="#FFC107"
                    android:visibility="invisible"
                    android:layout_marginLeft="@dimen/size5"
                    android:layout_marginRight="@dimen/size5"
                    />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>