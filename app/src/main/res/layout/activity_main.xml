<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".component.home.HomeActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_main_app"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size16"
        android:layout_marginHorizontal="@dimen/size16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speaker Cleaner"
            style="@style/TextView_Headline1"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:layout_width="@dimen/size40"
            android:layout_height="@dimen/size40"
            android:src="@drawable/ic_setting"
            android:background="@drawable/bg_main_stroke_gray_round20"
            android:padding="@dimen/size8"
            app:tint="@color/white"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/size20"
        android:layout_marginTop="@dimen/size24"
        android:background="@drawable/bg_main2_stroke_gray_round20"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/image_banner"
            android:layout_marginHorizontal="@dimen/size20"
            android:layout_marginTop="@dimen/size16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_banner_title"
            android:textColor="@color/white"
            android:textSize="@dimen/size12"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size5"
            android:layout_marginBottom="@dimen/size16"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/size20"
        android:layout_marginTop="@dimen/size20"
        >

        <com.msc.demo_mvvm.widget.Relative1Per1
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_gray_transparent_round20"
            android:layout_marginRight="@dimen/size10"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#292f49"
                app:cardCornerRadius="@dimen/size20"
                android:layout_margin="@dimen/size1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/size32"
                        android:layout_height="@dimen/size32"
                        android:src="@drawable/ic_auto"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_auto_clean"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/size5"
                        android:textSize="@dimen/size16"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </com.msc.demo_mvvm.widget.Relative1Per1>

        <com.msc.demo_mvvm.widget.Relative1Per1
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_gray_transparent_round20"
            android:layout_marginLeft="@dimen/size10"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#2b2644"
                app:cardCornerRadius="@dimen/size20"
                android:layout_margin="@dimen/size1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/size32"
                        android:layout_height="@dimen/size32"
                        android:src="@drawable/ic_manual"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_manual_clean"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/size5"
                        android:textSize="@dimen/size16"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </com.msc.demo_mvvm.widget.Relative1Per1>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/size20"
        android:layout_marginTop="@dimen/size20"
        >
        <com.msc.demo_mvvm.widget.Relative1Per1
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_gray_transparent_round20"
            android:layout_marginRight="@dimen/size10"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#2b2644"
                app:cardCornerRadius="@dimen/size20"
                android:layout_margin="@dimen/size1"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/size32"
                        android:layout_height="@dimen/size32"
                        android:src="@drawable/ic_vibrate"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_vibrate"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/size5"
                        android:textSize="@dimen/size16"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </com.msc.demo_mvvm.widget.Relative1Per1>
        <com.msc.demo_mvvm.widget.Relative1Per1
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_gradient_gray_transparent_round20"
            android:layout_marginLeft="@dimen/size10"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#292f49"
                app:cardCornerRadius="@dimen/size20"
                android:layout_margin="@dimen/size1"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="@dimen/size32"
                        android:layout_height="@dimen/size32"
                        android:src="@drawable/ic_blower"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_blower"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/size5"
                        android:textSize="@dimen/size16"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </com.msc.demo_mvvm.widget.Relative1Per1>

    </LinearLayout>
</LinearLayout>