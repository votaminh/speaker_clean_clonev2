<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_view"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/ad_unit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f8f8f8"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size10"
        >

        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size8"
            android:layout_marginTop="@dimen/size8"
            android:layout_marginEnd="@dimen/size8"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/ad_app_icon"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:adjustViewBounds="true"
                android:src="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/icon_ad"
                    android:text="AD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFC107"
                    android:backgroundTint="#FDB812"
                    android:paddingHorizontal="@dimen/size6"
                    android:paddingVertical="@dimen/size1"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/ad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="title ne anh em"
                    />

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="90"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="ad_body ne anh em" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_above="@id/cv_ad_call_to_action"
            android:layout_below="@id/layout_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="#F89A0D"
            app:cardCornerRadius="@dimen/size20"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/size20"
            >
            <TextView
                android:id="@+id/ad_call_to_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/size14"
                tools:text="Install"
                android:paddingTop="@dimen/size12"
                android:paddingBottom="@dimen/size12"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</com.google.android.gms.ads.nativead.NativeAdView>